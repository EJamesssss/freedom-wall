<%= form_with model: @post do |form|%>
<div class="container my-2">
  <div class="row my-2">
    <div class="col-lg-4">
      <%= form.label :topic, class: "form-label"%>
      <%= form.text_field :topic, class: "form-control", placeholder:"Show us your topic!"%>
    </div>
  </div>
  <div class="row my-2">
    <div class="col-lg-6">
      <%= form.label :content, class: "form-label"%>
      <%= form.text_field :content, class: "form-control", placeholder:"Post anything!"%>
    </div>
  </div>
  <div class="row my-2">
    <div class="col-lg-4">
      <%= form.label :author, class: "form-label"%>
      <%= form.text_field :author, class: "form-control", placeholder:"Give us your alias!"%>
    </div>
  </div>
  <div class="field">
      <%= form.submit class: 'btn btn-info'%>
      <a class="btn btn-secondary" href="/posts" role="button">Back</a>
  </div>
</div>
<%end%>

